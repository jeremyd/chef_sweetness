#!/bin/bash
echo -e 'starting skyped.. logging to <%= @users_home %>/skyped/skyped.log, pidfile: <%= @users_home %>/skyped/skyped.pid'
export DISPLAY=:0
export HOME=<%= @users_home %>
export USER=<%= @node.box.user %>
skyped -c <%= @users_home %>/skyped/skyped.conf -l <%= @users_home %>/skyped/skyped.log |cut -d: -f2 > <%= @users_home %>/skyped/skyped.pid
